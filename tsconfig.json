{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2020",
            "DOM"
        ],
        "outDir": "./dist-ts",
        "rootDir": "./",
        "strict": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "declaration": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "types": [
            "node"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        // 未使用の要素を検出
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts",
        "main.ts",
        "preload.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-ts",
        "build",
        "src/renderer",
        "**/*_backup.js",
        "**/*_backup.ts"
    ]
}