{
    "name": "movie-library",
    "version": "0.0.6",
    "description": "A video file management application for Mac",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --enable-logging",
        "build": "electron-builder",
        "build:mac": "electron-builder --mac",
        "build:win": "electron-builder --win",
        "build:all": "electron-builder --mac --win",
        "build:mac-light": "electron-builder --mac --config.compression=store",
        "build:optimized": "npm run clean && electron-builder --mac --config.compression=maximum",
        "build:ultra-light": "npm run clean && electron-builder --mac --config.compression=maximum --config.nsis.oneClick=true",
        "dist": "electron-builder --publish=never",
        "release": "electron-builder --publish=always",
        "clean": "rimraf dist node_modules/.cache",
        "version:patch": "npm version patch && git push --follow-tags",
        "version:minor": "npm version minor && git push --follow-tags",
        "version:major": "npm version major && git push --follow-tags",
        "postinstall": "electron-builder install-app-deps",
        "rebuild": "npm rebuild sqlite3 --build-from-source",
        "rebuild:electron": "npx electron-rebuild -f -w sqlite3"
    },
    "keywords": [
        "electron",
        "video",
        "management",
        "media"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "electron": "^27.0.0",
        "electron-builder": "^24.6.4",
        "@electron/rebuild": "^3.6.0",
        "rimraf": "^5.0.10"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "ffmpeg-static": "^5.2.0",
        "ffprobe-static": "^3.1.0",
        "fluent-ffmpeg": "^2.1.2",
        "sqlite3": "^5.1.7"
    },
    "build": {
        "appId": "com.yourcompany.movielibrary",
        "productName": "Movie Library",
        "directories": {
            "output": "dist"
        },
        "icon": "assets/icon",
        "npmRebuild": true,
        "buildDependenciesFromSource": true,
        "compression": "maximum",
        "removePackageScripts": true,
        "removePackageKeywords": true,
        "asarUnpack": [
            "node_modules/ffmpeg-static/ffmpeg",
            "node_modules/ffprobe-static/bin/ffprobe",
            "node_modules/sqlite3/lib/binding/**/*"
        ],
        "files": [
            "main.js",
            "preload.js",
            "src/**/*",
            "assets/icon.*",
            "package.json",
            "node_modules/chokidar/index.js",
            "node_modules/chokidar/lib/**/*",
            "node_modules/ffmpeg-static/ffmpeg",
            "node_modules/ffprobe-static/bin/ffprobe",
            "node_modules/ffprobe-static/index.js",
            "node_modules/fluent-ffmpeg/index.js",
            "node_modules/fluent-ffmpeg/lib/**/*",
            "node_modules/sqlite3/lib/**/*",
            "!node_modules/sqlite3/deps/**/*",
            "!node_modules/sqlite3/test/**/*",
            "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,HISTORY.md,CHANGES.md,AUTHORS,CONTRIBUTORS}",
            "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples,spec,specs,doc,docs,documentation}/**/*",
            "!**/node_modules/*/{.github,.vscode,.idea,coverage}/**/*",
            "!**/node_modules/*.d.ts",
            "!**/node_modules/.bin/**/*",
            "!**/node_modules/**/*.map",
            "!**/node_modules/**/*.md",
            "!**/LICENSE*",
            "!**/COPYING*",
            "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
            "!.editorconfig",
            "!**/._*",
            "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
            "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
            "!**/{appveyor.yml,.travis.yml,circle.yml}",
            "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
            "!**/node_modules/*/docs/**/*",
            "!**/node_modules/*/documentation/**/*",
            "!**/node_modules/*/man/**/*",
            "!**/node_modules/*/.travis.yml",
            "!**/node_modules/*/.eslintrc*",
            "!**/node_modules/*/tsconfig.json",
            "!**/node_modules/*/webpack.config.js",
            "!**/node_modules/*/rollup.config.js",
            "!**/node_modules/*/gulpfile.js",
            "!**/node_modules/*/Gruntfile.js",
            "!**/node_modules/*/Makefile",
            "!**/node_modules/*/*.coffee",
            "!**/node_modules/*/*.flow"
        ],
        "mac": {
            "icon": "assets/icon.icns",
            "category": "public.app-category.video",
            "darkModeSupport": true,
            "hardenedRuntime": true,
            "entitlements": "build/entitlements.mac.plist",
            "entitlementsInherit": "build/entitlements.mac.plist",
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "arm64",
                        "x64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "assets/icon.ico",
            "artifactName": "${productName}-${version}-${arch}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
